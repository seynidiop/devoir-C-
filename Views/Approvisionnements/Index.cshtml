@model ApprovisionnementListViewModel
@{
    ViewData["Title"] = "Gestion des Approvisionnements";
}

<div class="row">
    <!-- Section Formulaire Nouvel Approvisionnement -->
    <div class="col-12 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Nouvel approvisionnement</h5>
                <a asp-action="Index" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-arrow-left me-1"></i>Retour à la liste
                </a>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Informations générales -->
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">Informations générales</h6>
                        <form asp-action="Create" method="get">
                            <div class="mb-3">
                                <label class="form-label">Date d'approvisionnement</label>
                                <input type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" disabled />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Fournisseur</label>
                                <select class="form-select" disabled>
                                    <option>Sélectionner un fournisseur</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Référence</label>
                                <input type="text" class="form-control" placeholder="Référence de l'approvisionnement" disabled />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Observations</label>
                                <textarea class="form-control" rows="2" placeholder="Observations ou commentaires sur cet approvisionnement" disabled></textarea>
                            </div>
                        </form>
                    </div>
                    
                    <!-- Détails de l'approvisionnement -->
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">Détails de l'approvisionnement</h6>
                        <div class="mb-3">
                            <label class="form-label">Article</label>
                            <select class="form-select" disabled>
                                <option>Sélectionner un article</option>
                            </select>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                <div class="mb-3">
                                    <label class="form-label">Quantité</label>
                                    <input type="number" class="form-control" disabled />
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="mb-3">
                                    <label class="form-label">Prix unitaire (FCFA)</label>
                                    <input type="number" class="form-control" disabled />
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Montant total (FCFA)</label>
                            <input type="text" class="form-control" disabled />
                        </div>
                    </div>
                </div>
                
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <button type="button" class="btn btn-outline-success" disabled>
                        <i class="bi bi-plus me-1"></i>Ajouter un autre article
                    </button>
                    <div>
                        <button type="button" class="btn btn-outline-secondary me-2" disabled>Annuler</button>
                        <a asp-action="Create" class="btn btn-success">
                            <i class="bi bi-check-lg me-1"></i>Enregistrer l'approvisionnement
                        </a>
                    </div>
                </div>
                
                <!-- Articles ajoutés -->
                <div class="mt-4">
                    <h6 class="text-muted">Articles ajoutés</h6>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Article</th>
                                    <th>Quantité</th>
                                    <th>Prix unitaire</th>
                                    <th>Montant</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-3">
                                        <small>Aucun article ajouté</small>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3"></td>
                                    <td><strong>Total:</strong></td>
                                    <td><strong>0 FCFA</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Section Liste des Approvisionnements -->
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Gestion des Approvisionnements</h5>
                <a asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus me-1"></i>Nouvel approvisionnement
                </a>
            </div>
            <div class="card-body">
                <!-- Filtres -->
                <form asp-action="Index" method="get" class="mb-4">
                    <h6 class="text-muted mb-3">Filtres et recherche</h6>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <div class="input-group">
                                <input type="text" class="form-control" name="Recherche" 
                                       value="@Model.Recherche" placeholder="Rechercher..." />
                                <button type="submit" class="btn btn-outline-secondary">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <select asp-for="FournisseurId" asp-items="Model.Fournisseurs" class="form-select">
                                <option value="">Tous les fournisseurs</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select asp-for="ArticleId" asp-items="Model.Articles" class="form-select">
                                <option value="">Tous les articles</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div class="row g-2">
                                <div class="col-6">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text">Du</span>
                                        <input type="date" class="form-control" name="DateDebut" 
                                               value="@Model.DateDebut?.ToString("yyyy-MM-dd")" />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="input-group input-group-sm">
                                        <span class="input-group-text">Au</span>
                                        <input type="date" class="form-control" name="DateFin" 
                                               value="@Model.DateFin?.ToString("yyyy-MM-dd")" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <select asp-for="TriPar" class="form-select">
                                <option value="date_desc">Date (récent → ancien)</option>
                                <option value="date_asc">Date (ancien → récent)</option>
                                <option value="montant_desc">Montant (décroissant)</option>
                                <option value="montant_asc">Montant (croissant)</option>
                                <option value="reference">Référence</option>
                            </select>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-funnel me-1"></i>Filtrer
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                            <i class="bi bi-arrow-counterclockwise me-1"></i>Réinitialiser
                        </a>
                    </div>
                </form>
                
                <!-- Tableau des approvisionnements -->
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Référence</th>
                                <th>Date</th>
                                <th>Fournisseur</th>
                                <th>Articles</th>
                                <th>Montant total</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Approvisionnements.Any())
                            {
                                @foreach (var appro in Model.Approvisionnements)
                                {
                                    <tr>
                                        <td><strong>@appro.Reference</strong></td>
                                        <td>@appro.DateApprovisionnement.ToString("dd/MM/yyyy")</td>
                                        <td>@appro.Fournisseur?.Nom</td>
                                        <td>
                                            <span class="badge bg-info">@appro.Lignes.Count articles</span>
                                        </td>
                                        <td>@appro.MontantTotal.ToString("N0") FCFA</td>
                                        <td>
                                            @switch (appro.Statut)
                                            {
                                                case StatutApprovisionnement.Recu:
                                                    <span class="badge bg-success">Reçu</span>
                                                    break;
                                                case StatutApprovisionnement.EnAttente:
                                                    <span class="badge bg-warning text-dark">En attente</span>
                                                    break;
                                                case StatutApprovisionnement.Annule:
                                                    <span class="badge bg-danger">Annulé</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Details" asp-route-id="@appro.Id" 
                                                   class="btn btn-outline-info" title="Voir">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@appro.Id" 
                                                   class="btn btn-outline-warning" title="Modifier">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@appro.Id" method="post" 
                                                      class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet approvisionnement ?');">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-danger" title="Supprimer">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center py-4">
                                        <i class="bi bi-inbox text-muted fs-1"></i>
                                        <p class="text-muted mt-2">Aucun approvisionnement trouvé</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Pagination">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-Page="@(Model.Page - 1)"
                                   asp-route-Recherche="@Model.Recherche"
                                   asp-route-FournisseurId="@Model.FournisseurId"
                                   asp-route-ArticleId="@Model.ArticleId"
                                   asp-route-DateDebut="@Model.DateDebut?.ToString("yyyy-MM-dd")"
                                   asp-route-DateFin="@Model.DateFin?.ToString("yyyy-MM-dd")"
                                   asp-route-TriPar="@Model.TriPar">Précédent</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Page ? "active" : "")">
                                    <a class="page-link" asp-action="Index" 
                                       asp-route-Page="@i"
                                       asp-route-Recherche="@Model.Recherche"
                                       asp-route-FournisseurId="@Model.FournisseurId"
                                       asp-route-ArticleId="@Model.ArticleId"
                                       asp-route-DateDebut="@Model.DateDebut?.ToString("yyyy-MM-dd")"
                                       asp-route-DateFin="@Model.DateFin?.ToString("yyyy-MM-dd")"
                                       asp-route-TriPar="@Model.TriPar">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" 
                                   asp-route-Page="@(Model.Page + 1)"
                                   asp-route-Recherche="@Model.Recherche"
                                   asp-route-FournisseurId="@Model.FournisseurId"
                                   asp-route-ArticleId="@Model.ArticleId"
                                   asp-route-DateDebut="@Model.DateDebut?.ToString("yyyy-MM-dd")"
                                   asp-route-DateFin="@Model.DateFin?.ToString("yyyy-MM-dd")"
                                   asp-route-TriPar="@Model.TriPar">Suivant</a>
                            </li>
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
    
    <!-- Statistiques -->
    <div class="col-12 mt-4">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 bg-light">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Total des approvisionnements</h6>
                        <h3 class="text-primary mb-0">@Model.TotalApprovisionnements.ToString("N0") FCFA</h3>
                        <small class="text-muted">Période: @Model.DateDebut?.ToString("MMMM yyyy")</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 bg-light">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Nombre d'approvisionnements</h6>
                        <h3 class="text-success mb-0">@Model.NombreApprovisionnements</h3>
                        <small class="text-muted">Période: @Model.DateDebut?.ToString("MMMM yyyy")</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 bg-light">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Fournisseur principal</h6>
                        <h3 class="text-info mb-0">@(Model.FournisseurPrincipal ?? "N/A")</h3>
                        <small class="text-muted">
                            @if (Model.MontantFournisseurPrincipal > 0)
                            {
                                @:@Model.MontantFournisseurPrincipal.ToString("N0") FCFA (@Model.PourcentageFournisseurPrincipal%)
                            }
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
